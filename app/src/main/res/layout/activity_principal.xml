        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:layout_width="650dp"
        android:layout_height="415dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="65dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="260dp"
                    android:layout_weight="0.4"
                    android:background="@drawable/fondo_numeros"
                    android:elevation="10dp">

                    <TextView
                        android:id="@+id/txtPesoGarra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical|right"

                        android:text="25000"
                        android:textColor="@color/icons"
                        android:textSize="105sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgEstable"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/circulo_pesando" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="18dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/circulo_pesando"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/circulo_pesando" />

                        <ImageView
                            android:id="@+id/imgDescargando"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/circulo_pesando"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
<!-- Aca va el fragment -->
            <LinearLayout
                android:id="@+id/pirulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.8"
                android:orientation="vertical">



            </LinearLayout>
<!-- Hasta aca va el fragment -->
            <LinearLayout

                android:id="@+id/Layout_Total_Cargado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.7"
                            android:gravity="bottom"
                            android:paddingStart="10dp"
                            android:text="@string/total"
                            android:textColor="@color/icons"
                            android:textSize="18sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/txt_Peso_Acumulado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="bottom|center_horizontal"
                            android:paddingStart="20dp"
                            android:text="0"

                            android:textColor="@color/icons"
                            android:textSize="18sp"
                            android:typeface="serif" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.7"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical"
                            android:paddingStart="10dp"
                            android:text="@string/Tiempo_de_carga"
                            android:textColor="@color/primary_light"
                            android:textSize="18sp"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/txtCargio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:text="0:0"
                            android:textColor="@color/primary_light"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.7"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            android:gravity="center_vertical"
                            android:text="Cargas :"
                            android:textColor="@color/primary_light"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtGarradas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:textColor="@color/primary_light"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="351dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="41dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/datos_de_la_descarga"
                    android:textColor="@color/icons"
                    android:textSize="20sp"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:defaultFocusHighlightEnabled="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    style="@style/textView_DatosDescarga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/patente"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_patente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentTop="true"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="25dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
                    android:theme="@style/CampoTexto1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    style="@style/textView_DatosDescarga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/codigo"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
                    android:theme="@style/CampoTexto1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    style="@style/textView_DatosDescarga"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/producto"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_producto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
                    android:theme="@style/CampoTexto1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView32"
                    style="@style/textView_DatosDescarga"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/datos_cliente"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
                    android:theme="@style/CampoTexto1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView34"
                    style="@style/textView_DatosDescarga"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/datos_tara"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_tara"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
                    android:theme="@style/CampoTexto1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView36"
                    style="@style/textView_DatosDescarga"
                    android:layout_weight="1.9"
                    android:gravity="bottom|center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/datos_volumen"
                    android:textColor="@color/primary_light"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/edt_volumen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/icons"
                    android:textSize="18sp"
