            app:layout_constraintEnd_toStartOf="@+id/txtBateria" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView24" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:paddingEnd="10dp"
        android:paddingStart="50dp">

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/boton_menu_compuesto"
            android:elevation="8dp"
            android:onClick="onClicK" />

        <ImageButton
            android:id="@+id/btnCargar"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/boton_cargar_compuesto"
            android:onClick="onClicK" />

        <ImageButton
            android:id="@+id/btnRestar"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/boton_restar_azul"
            android:onClick="onClicK" />

        <ImageButton
            android:id="@+id/btnGuardar"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/boton_guardar_compuesto"
            android:onClick="onClicK" />

        <ImageButton
            android:id="@+id/btnAcumular"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/boton_acum_compuesto"
            android:onClick="onClicK" />

        <ImageButton
            android:id="@+id/btnCero"
            android:layout_width="90dp"
            android:layout_height="87dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/boton_cero_compuesto" />
    </LinearLayout>

    <ProgressBar


        android:id="@+id/progressBarImpresion"
        android:layout_width="346dp"

        android:layout_height="144dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="321dp"
        android:layout_marginTop="238dp"
        android:elevation="10dp"
        android:max="100"
        android:theme="@style/progressBarTheme"
        android:tooltipText="Imprimiendo ..."
        android:visibility="invisible" />

