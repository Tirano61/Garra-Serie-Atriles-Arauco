<resources>

    <style name="MaterialTema" parent="Material.Base">

    </style>
    <!-- Base application theme. -->
    <style name="Material.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:colorPrimary">#607D8B</item>
        <item name="android:colorPrimaryDark">#455A64</item>
        <item name="android:colorAccent">#9E9E9E</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>

    </style>

    <style name="textView_DatosDescarga">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:buttonBarStyle">@color/accent</item>
    </style>

    <style name="MaterialTema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialTema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialTema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
